<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.horth_000.invsys" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.horth_000.invsys.Registrar"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.horth_000.invsys.WelcomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.horth_000.invsys.AdminPanel"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".Productos" />
        </activity>
        <activity
            android:name="com.example.horth_000.invsys.AddProd"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.horth_000.invsys.Productos"
            android:label="Productos" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.example.horth_000.invsys.Categorias"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.horth_000.invsys.AddCategoria"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.horth_000.invsys.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.horth_000.invsys.DetalleProducto"
            android:label="@string/title_activity_detalle_producto" >
        </activity>
    </application>

</manifest>
